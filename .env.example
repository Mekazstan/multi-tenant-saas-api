# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development  # development, staging, or production
PORT=8080
APP_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/multitenant_saas?sslmode=disable

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Security
# ============================================
# Generate a secure random string for JWT_SECRET
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# Email/SMTP Configuration
# ============================================
# For development, you can use services like Mailtrap, Mailhog, or Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yoursaas.com
FROM_NAME=Your SaaS Platform

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Payment Providers
# ============================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Paystack Configuration (for Nigerian market)
PAYSTACK_SECRET_KEY=sk_test_...
PAYSTACK_WEBHOOK_SECRET=...
PAYSTACK_PUBLIC_KEY=pk_test_...

# ============================================
# Feature Flags
# ============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TEAM_INVITATIONS=true

# ============================================
# External Services (Optional)
# ============================================

# Sentry for error tracking (optional)
SENTRY_DSN=

# Log Level
LOG_LEVEL=debug  # debug, info, warn, error

# ============================================
# Development Tools
# ============================================

# Enable SQL query logging in development
DEBUG_SQL=false

# Enable request logging
DEBUG_REQUESTS=true